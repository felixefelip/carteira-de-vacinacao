<h1>Caderneta</h1>

<table>
  <thead>
    <tr>
      <th>Descricao</th>
      <th>Qtde</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @vacinas.each do |vacina| %>
      <tr>
        <td><%= vacina.descricao %></td>
        <td><%= "#{current_user.qtde_doses_por_vacina(vacina)} doses" %></td>
        <td><%= link_to 'Show', cadernetum_path(vacina.id) %></td>
        <td><%= link_to 'Edit', edit_vacina_path(vacina) %></td>
        <td><%= link_to 'Cadastrar dose', new_vacina_dose_path(vacina) %></td>
        <td><%= link_to 'Destroy', vacina, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

