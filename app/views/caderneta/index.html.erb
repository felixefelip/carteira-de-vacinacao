  <h1>Caderneta de Vacinação</h1>

  <div class="table-responsive-md">
    <table class="table table-striped table-bordered table-hover mt-4 shadow-sm">
      <thead class="thead-light">
        <tr>
          <th>Vacinas</th>
          <th>Qtde de doses</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @vacinas.each do |vacina| %>
          <tr>
            <td><%= link_to vacina.descricao, cadernetum_path(vacina.id) %></td>
            <td><%= "#{::User::Doses::QtdePorVacina.new(current_user).qtde_por_vacina(vacina)} doses" %></td>
            <td><%= link_to 'Editar', edit_vacina_path(vacina) %></td>
            <td><%= link_to 'Remover', vacina, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
        <% end %>
      </tbody>
    </table>

<br>

