<h1>Caderneta de Vacinação</h1>

<div class="table-responsive-md">
  <table class="table table-striped table-bordered table-hover mt-4 shadow-sm">
    <thead class="thead-light">
      <tr>
        <th>Vacinas</th>
        <th>Qtde de doses</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% vacinas.each do |vacina| %>
        <%= render Views::Caderneta::Doses.new(vacina) %>
      <% end %>
    </tbody>
  </table>
</div>

<br>

<%= link_to "Adicionar Vacinação", vacinas_path %>
