<p id="notice"><%= notice %></p>

<h1>Calendário de Vacinação</h1>
Criança: 4 anos.
<div class="table-responsive-md">
  <table class="table table-striped table-bordered table-hover mt-4 shadow-sm">
    <thead class="thead-light">
      <tr>
        <th>Descricao</th>
        <th>Doses tomadas</th>
        <th>Situação</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @vacinas.each do |vacina| %>
        <tr>
          <td><%= vacina.descricao %></td>
          <td><%= [0, 0, 1, 1, 2, 3].sample %></td>
          <td><%= ["Dose atrasada", "Dose disponível", "Em dia", "Não disponível"].sample %></td>
          <td><%= link_to 'Cadastrar dose', new_vacina_dose_path(vacina) %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

